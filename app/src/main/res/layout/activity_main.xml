<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#dddddd"
    tools:context=".MainActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="3dp"
        app:cardCornerRadius="3dp"
        android:layout_margin="12dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="@string/choose_language_to_learn" />

            <com.hbb20.CountryPickerView
                android:id="@+id/countryPicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_main"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="3dp"
        app:cardCornerRadius="3dp"
        android:layout_margin="12dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:layout_margin="8dp"
                android:id="@+id/text_secondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/transition_how_long_text"/>
            <CheckBox
                android:id="@+id/origin_lang_checkbox_4s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4s"/>

            <CheckBox
                android:id="@+id/origin_lang_checkbox_8s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8s"/>

            <CheckBox
                android:id="@+id/origin_lang_checkbox_12s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12s"/>


            <CheckBox
                android:id="@+id/origin_lang_checkbox_16s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16s"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>




    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="3dp"
        app:cardCornerRadius="3dp"
        android:layout_margin="12dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/text_third"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dismiss_how_long_text"/>
            <CheckBox
                android:id="@+id/translation_lang_checkbox_4s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4s"/>

            <CheckBox
                android:id="@+id/translation_lang_checkbox_8s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8s"/>

            <CheckBox
                android:id="@+id/translation_lang_checkbox_12s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12s"/>


            <CheckBox
                android:id="@+id/translation_lang_checkbox_16s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16s"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>


</LinearLayout>